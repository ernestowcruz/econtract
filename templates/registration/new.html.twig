{% extends 'base.html.twig' %}

{% block title %}New usuario{% endblock %}

{% block body %}

    <section>
        <div class="display-table">
            <div class="display-table-cell vertical-align-middle">

                <div class="container">

                    <div class="row">
                        <div class="alert alert-success">
                            <h4 class="margin-bottom-0">{{ actor.nombre }}</h4>
                            <small class="text-success">Forma organizativa: {{ actor.forma }}/</small>
                            <p>{{ actor.descripcion }}</p>
                        </div>
                        <div class="col-md-6 col-md-offset-3">

                                {{ form_start(form) }}

                            {{ form_widget(form) }}
                            <br>
                            <button class="btn btn-primary">{{ button_label|default('Registrar') }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <a href="{{ path('empresa_index') }}">back to list</a>
{% endblock %}
